{
  "compilerOptions": {
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "lib": ["ES2019"],
    "isolatedModules": true,
    "module": "commonjs",
    "checkJs": true,
    "noPropertyAccessFromIndexSignature": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "target": "ES2019"
  },
  "include": ["src/**/*"]
}
